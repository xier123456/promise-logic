{
  "name": "promise-logic",
  "version": "2.7.0",
  "description": "Compose promises with logic gate semantics (AND, OR, XOR, NAND, NOR, XNOR, Majority). Forget APIs, remember logic.",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./typescript": {
      "import": "./dist/v2/index.esm.js",
      "require": "./dist/v2/index.cjs.js",
      "types": "./dist/v2/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "dev": "cross-env NODE_ENV=development rollup -c -w",
    "test": "node src/test/test.js",
    "test:jest": "jest --config jest.config.cjs",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:coverage": "jest --coverage --config jest.config.cjs",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "format": "prettier --write \"src/**/*.js\" \"test/**/*.js\"",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "keywords": [
    "promise",
    "logic",
    "async",
    "logic-gates",
    "xor",
    "nand",
    "nor",
    "xnor",
    "majority",
    "combinational",
    "async-programming",
    "concurrency"
  ],
  "author": {
    "name": "再乔乔我一下 (Let me hug you again)",
    "email": "2820387220@qq.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xier123456/promise-logic.git"
  },
  "bugs": {
    "url": "https://github.com/xier123456/promise-logic.git/issues"
  },
  "homepage": "https://promise-logic-1a6v.vercel.app/",
  "engines": {
    "node": ">=14.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.0.0",
    "rollup": "^4.56.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.3.0",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
